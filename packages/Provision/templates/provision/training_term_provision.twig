{% extends '@!EasyAdmin/default/layout.html.twig' %}

{% block content_header %}
    <h2>
        Provision for <strong>{{ trainingTerm }}</strong>
    </h2>

{% endblock %}

{% block main %}
    <div class="pt-4 pb-4 pl-4 pr-4">
        <div class="row">
            <div class="col-4">
                <table class="table table-bordered">
                    <thead class="bg-success text-white text-center">
                        <tr>
                            <th colspan="2">Summary</th>
                        </tr>
                    </thead>
                    <tr>
                        <td>
                            Income from {{ trainingTerm.getParticipantCount() }} participants
                        </td>
                        <td class="text-right text-success">
                            {{ income|number_format }} Kč
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Expenses
                            <a class="btn btn-danger ml-2" href="{{ path('easyadmin', {action: 'new', entity: 'Expense', trainingTerm: trainingTerm.getId() }) }}">Add</a>
                        </td>
                        <td class="text-right text-danger">
                            - {{ expenses_total|number_format }} Kč
                        </td>
                    </tr>

                    {% if trainingTerm.expenses %}
                        <tr>
                            <td colspan="2">
                                <table class="table">
                                    {% for expense in trainingTerm.expenses %}
                                        <tr>
                                            <td>{{ expense.note }}</td>
                                            <td class="text-right text-danger">- {{ expense.amount|number_format }} Kč</td>
                                        </tr>
                                    {% endfor %}
                                </table>
                            </td>
                        </tr>
                    {% endif %}

                    <tr class="bg-dark text-light">
                        <th>Profit</th>
                        <th class="text-right text-nowrap">
                            {{ profit|number_format }} Kč
                        </th>
                    </tr>
                </table>
            </div>

            <div class="col-4">
                <table class="table table-bordered">
                    <thead class="bg-warning text-white text-center">
                        <tr>
                            <th colspan="2">
                                Trainer {{ trainer.getName() }}
                            </th>
                        </tr>
                    </thead>
                    <tr>
                        <td>
                            Finished trainings
                        </td>
                        <td class="text-right">
                            {{ finished_training_count }}
                        </td>
                    </tr>
                    <tr>
                        <td>Provision Rate</td>
                        <td class="text-right">
                            {{ trainerProvisionRate }} %
                        </td>
                    </tr>
                    <tr>
                        <td>Provision</td>
                        <td class="text-right">{{ trainerProvision|number_format }} Kč</td>
                    </tr>

                    {% if trainer_expense_total %}
                        <tr>
                            <td>
                                Expenses <span class="text-muted">(e.g. lunch)</span>
                            </td>
                            <td class="text-right text-nowrap{% if trainer_expense_total %} text-success{% endif %}">
                                {% if trainer_expense_total %}+ {% endif %}
                                {{ trainer_expense_total|number_format }} Kč
                            </td>
                        </tr>
                    {% endif %}

                    <tr class="bg-dark text-light">
                        <th>Total Amount to Pay</th>
                        <th class="text-right text-nowrap">
                            {{ trainerProvisionWithExpense|number_format }} Kč
                        </th>
                    </tr>
                </table>

                {% if trainingTerm.provisionPaid == false %}
                    <div class="text-center mt-4">
                        <a href="{{ path('send_email_to_trainer_with_amount_to_invoice', {'id': trainingTerm.id }) }}" class="btn btn-lg btn-info">
                            Send Mail with Amount to Invoice
                        </a>
                    </div>
                {% endif %}
            </div>

            <div class="col-4">
                <table class="table table-bordered">
                    <thead class="bg-warning text-white text-center">
                    <tr>
                        <th colspan="2">Edukai, s. r. o.</th>
                    </tr>
                    </thead>
                    <tr>
                        <td>Provision Rate</td>
                        <td class="text-right">{{ ownerProvisionRate }} %</td>
                    </tr>
                    <tr class="bg-dark text-light">
                        <th>Provision</th>
                        <th class="text-right">{{ ownerProvision|number_format }} Kč</th>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
