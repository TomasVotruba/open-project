{% extends 'base.twig' %}

{% block main %}
    <div class="container">
        <h1>Dej nám feedback</h1>

        <div class="subhead">
            Díky tobě budou další školení, které navštívíš, lepší.
        </div>

        {# this alternative theme is also available #}
        {% form_theme form 'bootstrap_4_layout.html.twig' %}

        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="card shadow-card">
                    <div class="card-body card-form" id="feedback_form">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
