<div class="col-md-6 text-left mb-4">
    {% if feedback.url %}
        <a href="{{ feedback.url }}">{% if feedback.name is defined %}{{ feedback.name }}{% else %}Účastník{% endif %}</a>
    {% endif %}

    na školení <a href="{{ path('training_detail', {'slug': feedback.getTrainingSlug() }) }}">{{ feedback.getTrainingName() }}</a>:

    <p class="mt-3">
        <em>„{{ feedback.text|raw }}“</em>
    </p>
</div>
